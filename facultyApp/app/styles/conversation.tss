".template":{
	height: 100,
	width: Ti.UI.FILL
},
".messages": {
	backgroundColor:"#fff",
	orientationModes: [Ti.UI.PORTRAIT,Ti.UI.LANDSCAPE_LEFT,Ti.UI.LANDSCAPE_RIGHT,Ti.UI.UPSIDE_PORTRAIT],
	exitOnClose: true,
	titleAttributes:  {
        color: "#ae331f"
   },
   hideShadow: true,
   borderColor: "#fff",
   borderWidth: 1,
   translucent: true,
   extendEdges: Titanium.UI.EXTEND_EDGE_TOP
},

"#searchText": { 
	bottom: 7,
	left: 15,
	width: '85%',
	hintText: 'Reply', 
	hintTextColor: 'black',
	color: 'black',
	backgroundColor: 'white',
	borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED
}

"#searchButton": {
	bottom: 5,
	backgroundImage: '/images/sendIcon.png',
	right: 15,
	height: '55dp',
	width : '55dp'
}

"FooterView": {
	height: '180dp',
	width: '100%',
	backgroundColor: 'black',
	layout: 'horizontal',
	bottom: 0
}

".wrapper[platform=ios]":{
	navTintColor: "#ae331f"
}

".logo":{
	text: "\ue601",		// Unicode for Appcelerator Logo icon font
	color: "#C41230",
	font:{
		fontFamily:"icomoon",
		fontSize:36
	}
},

".favorite":{
	font:{
		fontSize: 25,
		fontFamily:"icomoon",
	},
	color:"#038BC8",
	text:"\uf005",	
	right: 10
},

".title":{
	font:{
		fontSize: 21
	},
	left: 85,
	color: "#000"
},

".subtitle":{
	font:{
		fontSize: 18
	},
	left: 85,
	color: "#000"
},

".avatar":{
	borderWidth: 1,
	borderColor: "#acacac",
	height: 75,
	width: 75,
	top: 12,
	left: 0,
	borderRadius: 35
},

".smoothAvatarBorderRadius": {
	borderWidth: 1.5,
	borderColor: "#acacac",
	height: 75,
	width: 75,
	top: 12,
	left: 0,
	borderRadius: 35,
	opacity: 0.6
}

".search":{ 
	backgroundColor: "#fff",
	borderWidth:0,
	borderColor:"#fff",
	tintColor: "#C41230",
	hintText: "Search",
	barColor: "#fff",
	showBookmark:true
},

".icon-search[platform=android,windows]":{
	font:{
		fontFamily:"icomoon",
		fontSize:24,
	},
	text: "\uf002",		//Unicode for Search icon font
	color: "#999",
	width:"7%",
},

".icon-close[platform=android,windows]":{
	font:{
		fontFamily:"icomoon",
		fontSize:24,
	},
	text: "\uf057",		// Unicode for close icon font
	color: "#999",
	height: 40,
	width:"7%",
	visible: false
},

".menuOpt[platform=android,windows]":{
	height: 40,
	left: 10,
	width: "76%"
},

"#listView":{
	tintColor: "#666"
}
